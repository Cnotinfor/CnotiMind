<?xml version="1.0" encoding="UTF-8"?>
<!-- List of crutches -->
<!-- Sentences added to Action -->
<ActionModifiers>
    <Action name="Talk">
        <!-- BEGIN AND END -->
        <!-- When is a good choice (notes and options) 
         and character is happy (between 2 and 10 of joy) -->
        <Emotion name="Joy" min="2" max="10">
            <Property name="Notes Option" value="Good" />
            <Property name="Duration Option" value="Good" />
            <Order value="Begin And End">
                <Modifiers name="Good#01" />
                <Modifiers name="Good#02" />
                <Modifiers name="Good#03" />
                <Modifiers name="Good#04" />
                <Modifiers name="Good#05" />
                <Modifiers name="Good#06" />
                <Modifiers name="Good#07" />
                <Modifiers name="Good#08" />
                <Modifiers name="Good#09" />
                <Modifiers name="Good#10" />
                <Modifiers name="Good#11" />
                <Modifiers name="Good#12" />
            </Order>
        </Emotion>
        <!-- When is a start and end crutch and a bad choice (notes and duration) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Bad" />
            <Property name="Duration Option" value="Bad" />
            <Order value="Begin And End">
                <Modifiers name="Bad#01" />
                <Modifiers name="Bad#02" />
                <Modifiers name="Bad#03" />
                <Modifiers name="Bad#04" />
                <Modifiers name="Bad#05" />
                <Modifiers name="Bad#06" />
            </Order>
        </Emotion>
        <!-- When is a start and end crutch a bad choice (duration) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Good" />
            <Property name="Duration Option" value="Bad" />
            <Order value="Begin And End">
                <Modifiers name="Bad#01" />
                <Modifiers name="Bad#02" />
                <Modifiers name="Bad#03" />
                <Modifiers name="Bad#04" />
                <Modifiers name="Bad#05" />
                <Modifiers name="Bad#06" />
            </Order>
        </Emotion>
        <!-- When is a start and end crutch and a bad choice (notes) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Bad" />
            <Property name="Duration Option" value="Good" />
            <Order value="Begin And End">
                <Modifiers name="Bad#01" />
                <Modifiers name="Bad#02" />
                <Modifiers name="Bad#03" />
                <Modifiers name="Bad#04" />
                <Modifiers name="Bad#05" />
                <Modifiers name="Bad#06" />
            </Order>
        </Emotion>
        <!-- BEGIN -->
        <!-- When is a start crutch and bad choice (notes and duration) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Bad" />
            <Property name="Duration Option" value="Bad" />
            <Order value="Begin">
                <Modifiers name="StartBad#01" />
                <Modifiers name="StartBad#02" />
            </Order>
        </Emotion>
        <!-- When is a start crutch and bad choice (duration) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Good" />
            <Property name="Duration Option" value="Bad" />
            <Order value="Begin">
                <Modifiers name="StartBad#01" />
                <Modifiers name="StartBad#02" />
            </Order>
        </Emotion>
        <!-- When is a start crutch and bad choice (notes) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Bad" />
            <Property name="Duration Option" value="Good" />
            <Order value="Begin">
                <Modifiers name="StartBad#01" />
                <Modifiers name="StartBad#02" />
            </Order>
        </Emotion>
        <!-- END -->
        <!-- When is a end crutch and bad choice (notes and duration) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Bad" />
            <Property name="Duration Option" value="Bad" />
            <Order value="End">
                <Modifiers name="EndBad#01" />
                <Modifiers name="EndBad#02" />
            </Order>
        </Emotion>
        <!-- When is a end crutch and bad choice (duration) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Good" />
            <Property name="Duration Option" value="Bad" />
            <Order value="End">
                <Modifiers name="EndBad#01" />
                <Modifiers name="EndBad#02" />
            </Order>
        </Emotion>
        <!-- When is a end crutch and bad choice (notes) 
         and character is unhappy (between -10 and -2 of joy) -->
        <Emotion name="Joy" min="-10" max="-2">
            <Property name="Notes Option" value="Bad" />
            <Property name="Duration Option" value="Good" />
            <Order value="End">
                <Modifiers name="EndBad#01" />
                <Modifiers name="EndBad#02" />
            </Order>
        </Emotion>
    </Action>
</ActionModifiers>