				<Action name="Talk" value="StartNoteDo" />
				<Emotion name="Happiness" increment="10" />
				<Storage event="Start Note" value="Do" />
			</Condition>
			<Condition type="Perception" perception="Add Note" value="Re">
				<Action name="Talk" value ="StartNoteRe" />
