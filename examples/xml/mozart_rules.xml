				<!-- La -->
				<Condition type="Perception" perception="Note" value="La">
					<Condition type="Variable" variable="[Last Note]" compareValue="Do">
						<Emotion name="Joy" increment="-1" min="-5" />
						<Property name="Notes Option" value="Bad" />
